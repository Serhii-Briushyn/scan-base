{
  "name": "scan-base",
  "private": true,
  "version": "0.0.1",
  "description": "Warehouse material tracking and data export tool",
  "author": "Serhii Briushyn",
  "main": "apps/main/dist/index.cjs",
  "scripts": {
    "lint": "eslint .",
    "dev:renderer": "cd apps/renderer && vite --config vite.config.ts",
    "dev:preload": "cd apps/preload  && vite build --watch --config vite.config.ts",
    "dev:main:build": "cd apps/main && vite build --watch --config vite.config.ts",
    "dev:main:run": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 ELECTRON_ENABLE_LOGGING=1 ELECTRON_ENABLE_STACK_DUMPING=1 nodemon --watch apps/main/dist --ext cjs,json --exec \"electron apps/main/dist/index.cjs\"",
    "dev": "concurrently -k -n RENDERER,PRELOAD,MAIN-BUILD,MAIN-RUN \"npm run dev:renderer\" \"npm run dev:preload\" \"npm run dev:main:build\" \"npm run dev:main:run\"",
    "build:renderer": "cd apps/renderer && vite build --config vite.config.ts",
    "build:preload": "cd apps/preload  && vite build --config vite.config.ts",
    "build:main": "cd apps/main     && vite build --config vite.config.ts",
    "build": "npm run build:renderer && npm run build:preload && npm run build:main",
    "dist": "npm run build && electron-builder",
    "release": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --publish always",
    "start:prod": "cross-env VITE_DEV_SERVER_URL= electron apps/main/dist/index.cjs"
  },
  "dependencies": {
    "dexie": "^4.2.0",
    "dexie-react-hooks": "^4.2.0",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "depcheck": "^1.4.7",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.github.serhiibriushyn.scanbase",
    "productName": "Scan Base",
    "directories": {
      "output": "release",
      "buildResources": "public"
    },
    "files": [
      "apps/renderer/dist/**",
      "apps/preload/dist/**",
      "apps/main/dist/**",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Serhii-Briushyn",
        "repo": "scan-base"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Scan Base",
      "deleteAppDataOnUninstall": true
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-Setup-${version}.exe",
      "icon": "public/icons/app.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icons/app.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icons"
    }
  }
}
